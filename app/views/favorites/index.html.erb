<div class="card-category-new" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1481627834876-b7833e8f5570?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=928&q=80)">
    <div class="header-flexbox">
      <h2>Howdy 👋🏼 <%= current_user.username %> !</h2>
        <div class="logo-fav">
          <%= link_to :root do%>
            <%= image_tag "logogood_white.svg" %>
          <% end %>
        </div>
    </div>
</div>
      <%#  %>
    <div class="container-playgame">
        <h4>Practice your skills and rehearse!</h4>
        <%= link_to favoritegame_path do %>
        <button class="taubenbutton">Train now</button>
      <% end %>
    </div>
<div class="speechcontainerfav">
    <% @favorites.each do |favorite| %>
    <div class="box1 sb5" data-controller="api">
      <div class="bubbletop">
        <div class="soundicon">
          <i data-action="click->api#fetchSpeech" class="fa-solid fa-play logo-favcard" data-lang="<%= favorite.phrase_country.country.code %>"></i>
        </div>
        <strong><%= favorite.phrase_country.country.language %>:</strong>
      <%= link_to favorite_path(favorite), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to unmark this phrase?"} do %>
        <i class="fa-solid fa-trash-can logo-favcard"></i>
      <% end %>
      </div>
      <div class="bubblebottom">
        <p data-api-target="sound"><%= favorite.phrase_country.content %></p>
          <p><em>means:</em>&nbsp&nbsp&nbsp&nbsp<%= favorite.phrase_country.phrase.content %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
