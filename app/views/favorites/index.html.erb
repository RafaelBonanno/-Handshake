<div class="background-color">
  <div class="card-category-new" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1481627834876-b7833e8f5570?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=928&q=80)">
  </div>
  <div class="container mt-5">
    <div class="containergreeting mt-2">
      <h4>Howdy ğŸ‘‹ğŸ¼ <%= current_user.username %> !</h4>
      <div class="logo-fav">
        <%= link_to :root do%>
          <%= image_tag "logocolor.png" %>
        <% end %>
      </div>
    </div>
      <%# <h6>Find below your favs ğŸ’š</h6> %>
    <div class="container-playgame">
      <h4>Train your skills! Practice your saved phrases:</h4>
        <%= link_to favoritegame_path do %>
            <button class="taubenbutton"> Train now !</button>
        <% end %>
      <br>
      <h4>Happy learning !</h4>
    </div>
    <div class="favcards-container">
      <% @favorites.each do |favorite| %>
      <div class="favcard" data-controller="api">
        <div class="logos-favcard">
          <div class="logo-favcard">
            <i data-action="click->api#fetchSpeech" class="fa-solid fa-volume-high logo-favcard" data-lang="<%= favorite.phrase_country.country.code %>"></i>
          </div>
          <div class="logo-favcard">
            <%= link_to favorite_path(favorite), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to unmark this phrase?"} do %>
              <i class="fa-solid fa-trash-can logo-favcard"></i>
            <% end %>
          </div>
        </div>
        <%# </div> %>
        <div class="content-favcard">
          <div class="left-favcard">
            <p>In <em><%= favorite.phrase_country.country.language %></em>
            <div data-api-target="sound" class="phrase-trs-favcard">
              <strong><%= favorite.phrase_country.content %></strong></p>
            </div>
          </div>
          <div class="right-favcard">
            <p>actually means:
            <div class="phrase-favcard">
              <strong><%= favorite.phrase_country.phrase.content %></strong></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
