<div class="container p-3">
  <h1> Going away? Pretty cool!</h1>
  <h2>Where and when are going?</h2>
</div>
<div class="container p-3">
  <%= simple_form_for @trip do |f| %>
              <%= f.input :start_date, as: :date, html5: true, :label => "When does your trip start?" %>
              <%= f.input :end_date, as: :date, html5: true, :label => "When does your trip end?" %>
            <%= f.association :country, :label => "Where are you going?" %>
            <%= f.submit class: 'btn btn-info' %>
          <% end %>
</div>
